{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 800,
  "title": {"text": "USA States - Voting", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/anshbajpai/Week9-Homework/main/US-Top10States%20-%20Sheet1.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "stack",
          "groupby": ["state"],
          "field": "total_votes",
          "sort": {"field": [], "order": []},
          "as": ["total_votes_start", "total_votes_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"total_votes\"]) && isFinite(+datum[\"total_votes\"])"
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 20},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"Total Votes\": format(datum[\"total_votes\"], \",\")}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Total Votes: \" + (format(datum[\"total_votes\"], \"\")) + \"; States: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"])"
          },
          "x": {"scale": "x", "field": "total_votes_end"},
          "x2": {"scale": "x", "field": "total_votes_start"},
          "y": {"scale": "y", "field": "state"},
          "height": {"scale": "y", "band": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["total_votes_start", "total_votes_end"]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "state", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Total Votes",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "States",
      "zindex": 0
    }
  ],
  "config": {}
}
{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#fff",
  "padding": 5,
  "width": 700,
  "height": 500,
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/anshbajpai/Week9-Homework/main/US-States%20-%20president_state%20(1).csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/anshbajpai/Week9-Homework/main/ne_10m_admin_1_states_provinces.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"name_en\"]",
          "as": "properties.name_en"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "state",
          "fields": ["properties.name"],
          "values": ["candidate"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"}
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#fff"},
          "strokeWidth": {"value": 0.5},
          "fill": {"scale": "color", "field": "candidate"},
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"properties.name_en\"]) ? datum[\"properties.name_en\"] : \"\"+datum[\"properties.name_en\"], \"Candidate\": isValid(datum[\"candidate\"]) ? datum[\"candidate\"] : \"\"+datum[\"candidate\"]}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Candidates: \" + (isValid(datum[\"candidate\"]) ? datum[\"candidate\"] : \"\"+datum[\"candidate\"]) + \"; State: \" + (isValid(datum[\"properties.name_en\"]) ? datum[\"properties.name_en\"] : \"\"+datum[\"properties.name_en\"]) + \"; Candidate: \" + (isValid(datum[\"candidate\"]) ? datum[\"candidate\"] : \"\"+datum[\"candidate\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "candidate", "sort": true},
      "range": "category"
    }
  ],
  "legends": [
    {
      "title": "Candidates",
      "fill": "color",
      "encode": {"symbols": {"update": {"stroke": {"value": "#fff"}}}}
    }
  ],
  "config": {
    "path": {"stroke": "#4572a7"},
    "shape": {"stroke": "#4572a7"},
    "symbol": {"fill": "#4572a7", "strokeWidth": 1.5, "size": 50},
    "range": {
      "category": [
        "#D3D3D3",
        "#DB4437",
        "#4285F4",
        "#71598e",
        "#4598ae",
        "#d98445",
        "#94aace",
        "#d09393",
        "#b9cc98",
        "#a99cbc"
      ]
    },
    "axis": {
      "bandPosition": 0.5,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 1,
      "gridWidth": 0.5,
      "labelPadding": 10,
      "tickSize": 5,
      "tickWidth": 0.5
    },
    "axisBand": {"grid": false, "tickExtra": true},
    "legend": {
      "labelBaseline": "middle",
      "labelFontSize": 11,
      "symbolSize": 50,
      "symbolType": "square"
    },
    "style": {
      "arc": {"fill": "#4572a7"},
      "area": {"fill": "#4572a7"},
      "line": {"stroke": "#4572a7", "strokeWidth": 2},
      "rect": {"fill": "#4572a7"}
    }
  }
}